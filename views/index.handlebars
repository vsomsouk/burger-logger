<img class =""src="/assets/img/burger.jpg">

<h1 class ="header vspace">Devour a Burger!</h1>

  <div class="row">
    <div class="col">
      <h4 class="prompt">Hm.. which burger?</h4>

        <ul class="burgs">
          {{#each burgers}}
             {{#unless devoured}}
              {{> burgers/burger-block devour=true}}
             {{/unless}}
          {{/each}}
        </ul>
    </div>

<div class"col-5"></div>

    <div class="col">
      <h4 class="prompt">Nom...burger devoured!</h4>

        <ul class="burgs">
        {{#each burgers}}
          {{#if devoured}}
             {{> burgers/burger-block devour=false}}
          {{/if}}
         {{/each}}
        </ul>
     </div>
  </div>
      </br>
 <i class="fas fa-camera"></i>
  <div class="center">
    <h4 class="header">Hungry? Add a Burger!</h4>
      <form class="create-form">

        <div class="form-group header">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>
        <button type="submit">Add Burger</button>
      </form>
  </div>
