<img src="../public/assets/img/burger.jpg">

<h1 class ="header">Devour a Burger!</h1>


<div class="container">
  <div class="row">
    <div class="col-6>"
      <h2 class="prompt">Which burger would you like to eat?</h2>

        <ul>
          {{#each burgers}}
             {{#unless devoured}}
              {{> burgers/burger-block devour=true}}
             {{/unless}}
          {{/each}}
        </ul>
    </div>

    <div class="col-xs-6>"
      <h2 class="prompt">Burger Devoured!</h2>

        <ul>
        {{#each burgers}}
          {{#if devoured}}
             {{> burgers/burger-block devour=false}}
          {{/if}}
         {{/each}}
        </ul>
     </div>
  </div>
      </br>



  <div class="center">
    <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        <div class="form-group">
          <label for="ca">Hungry?</label><br>
        </div>

        <button type="submit">Add Burger</button>
      </form>
  </div>
</div>